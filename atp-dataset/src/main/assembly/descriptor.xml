<assembly xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
    <id>dist</id>
    <includeBaseDirectory>false</includeBaseDirectory>

    <formats>
        <format>zip</format>
    </formats>

    <fileSets>
        <fileSet>
            <directory>target</directory>
            <outputDirectory/>
            <includes>
                <include>*.sh</include>
            </includes>
            <lineEnding>unix</lineEnding>
        </fileSet>
        <fileSet>
            <directory>target</directory>
            <outputDirectory/>
            <includes>
                <include>*.cmd</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>target/config</directory>
            <outputDirectory>config</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>web</directory>
            <outputDirectory>web</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>target</directory>
            <includes>
                <include>version.txt</include>
            </includes>
            <outputDirectory>web</outputDirectory>
        </fileSet>
    </fileSets>
    <dependencySets>
        <dependencySet>
            <outputDirectory>/q-classes</outputDirectory>
            <includes>
                <include>org.qubership.atp.dataset:atp-dataset-q-classes-generation
                </include>
            </includes>
        </dependencySet>
        <dependencySet>
            <outputDirectory>/lib</outputDirectory>
            <excludes>
                <exclude>org.qubership.atp.dataset:atp-dataset-q-classes-generation
                </exclude>
            </excludes>
        </dependencySet>
    </dependencySets>
</assembly>